<Window x:Class="WpfAppPOOArch.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppPOOArch"
        mc:Ignorable="d"
        Title="Gestion Financiera" Height="800" Width="700">
    <StackPanel>
        <Label x:Name="lblTitulo"
               Content="Gestion Financiera"
               FontSize="30"
               HorizontalAlignment="Center"/>
        <StackPanel>
            <Label x:Name="lblClientes"
  Content="Clientes: "
 />
            <TextBox x:Name="txtCliente"
                     Width="250"
                     Margin="10,5"/>
        </StackPanel>
        <DataGrid x:Name="dgClientes"
                  Height="100">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID"
                                    Binding="{Binding IdCli}"
                                    Width="50"/>
                <DataGridTextColumn Header="NOMBRE"
                                    Binding="{Binding NombreCli}"
                     Width="200"/>
            </DataGrid.Columns>
            
        </DataGrid>
        <StackPanel Orientation="Horizontal">
            <Button x:Name="btnAgregarCliente"
                    Content="Agregar Cliente" Click="btnAgregarCliente_Click"/>
            <Button x:Name="btnBorrar"
                    
                    Content="Borrar cliente" Click="btnBorrar_Click"/>
            <Button x:Name="btnBuscarCliente"
         Content="Buescar cliente"/>
        </StackPanel>
        <StackPanel>
            <Label x:Name="lblCuentas"
 Content=" Monto de Cuenta: "
                   
/>
            <TextBox x:Name="txtCuentas"
                     Width="250"
                     Margin="10,5"/>
        </StackPanel>
        <DataGrid x:Name="dgCuentas"
           Height="100">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID CTA"
                                    Binding="{Binding IdCta}"
                             Width="100"/>
                <DataGridTextColumn Header="MONTO"
                                    Binding="{Binding MontoCta}"
              Width="200"/>
            </DataGrid.Columns>
           

        </DataGrid>
        <StackPanel Orientation="Horizontal">
            <Button x:Name="btnAgregarCuenta"
               Content="Agregar Cuenta" Click="btnAgregarCuenta_Click"
               />
            <Button x:Name="btnBorarCuenta"
Content="Eliminar Cuenta"/>

        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Button x:Name="btnCargarArchivo"
               Content="cargar Archivo" 
               />
            <Button x:Name="btnBorrarArchivo"
Content="Eliminar Archivo"/>

        </StackPanel>
    </StackPanel>
</Window>
